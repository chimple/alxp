<org.chimple.messenger.ui.AccountListItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/underBubble"
    android:padding="6dp"
    >

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">    

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <org.ironrabbit.type.CustomTypefaceTextView android:id="@+id/providerName"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:layout_weight="1.0"
                    android:ellipsize="marquee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account nickname goes here"
                    />
            </LinearLayout>

            <TextView android:id="@+id/loginName"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="sans-serif-light"
                android:text="foo@domain.com"
               />
        </LinearLayout>
           <Switch
                android:id="@+id/statusSwitch"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            
            />
           

</org.chimple.messenger.ui.AccountListItem>