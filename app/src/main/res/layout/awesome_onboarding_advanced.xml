<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/flipViewAdvanced"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="10dp"
android:paddingTop="40dp"
    android:fillViewport="true"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/viewCreate"
        >

        <org.ironrabbit.type.CustomTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/create_id"
            android:textAppearance="?android:attr/textAppearanceLarge"

            />
        <org.ironrabbit.type.CustomTypefaceEditText android:id="@+id/edtNameAdvanced"
            android:selectAllOnFocus="true"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:autoLink="none"
            android:cursorVisible="true"
            android:inputType="textEmailAddress"
            android:layout_margin="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="24dp"
            android:padding="6dp"
            android:background="@drawable/rounded_rect"
            android:textColor="?messageTextPrimary"

            />
        <org.ironrabbit.type.CustomTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/onboarding_generate"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:gravity="center"
            />


    <!--
<org.chimple.messenger.ui.widgets.InstantAutoCompleteTextView
    android:id="@+id/spinnerDomains"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawSelectorOnTop="true"
    android:hint="@string/select_domain_new_account"
    android:completionThreshold="1"
    android:gravity="center"
    android:background="@drawable/rounded_rect"
    android:layout_margin="3dp"
    android:padding="6dp"

    />
    -->

<org.ironrabbit.type.CustomTypefaceEditText android:id="@+id/edtNewPass"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:hint="@string/account_setup_password"
    android:selectAllOnFocus="true" android:inputType="textPassword"
    android:padding="6dp"
    android:gravity="center"
    android:background="@drawable/rounded_rect"
    android:layout_margin="3dp"
    android:textColor="?messageTextPrimary"

    />

<org.ironrabbit.type.CustomTypefaceEditText android:id="@+id/edtNewPassConfirm"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:hint="@string/account_setup_password_confirm"
    android:selectAllOnFocus="true"
    android:inputType="textPassword"
    android:gravity="center"
    android:background="@drawable/rounded_rect"
    android:layout_margin="3dp"
    android:padding="6dp"
    android:textColor="?messageTextPrimary"

    />

        <org.ironrabbit.type.CustomTypefaceEditText android:id="@+id/spinnerDomains"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/select_domain_new_account"
            android:padding="6dp"
            android:gravity="center"
            android:background="@drawable/rounded_rect"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="20dp"
            android:textColor="?messageTextPrimary"

            />
        <org.ironrabbit.type.CustomTypefaceTextView
            android:id="@+id/statusError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text=""
            android:textSize="16dp"
            android:textColor="?colorPrimary"
            />

<org.ironrabbit.type.CustomTypefaceButton android:id="@+id/btnNewRegister"
    android:text="@string/btn_create_new_account"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dip"
    android:layout_width="300dp"
    android:layout_gravity="bottom|center"
    android:background="@drawable/rounded_rect_primary"
    android:textColor="@android:color/white"
    android:gravity="center"
    style="@android:style/Widget.Button"

    />


</LinearLayout>
</ScrollView>