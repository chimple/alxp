<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_details"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@drawable/dialog_bg"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="fill_parent">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/engword"
                android:textSize="40dp"
                android:textColor="#000000"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/volume"
                android:id="@+id/engvoice"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:text=""
                android:textSize="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/engmeaning"
                android:textColor="#000000"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/ad_btn_check_on_pressed_holo_light"
                android:id="@+id/engimage"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="fill_parent">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <TextView
                android:text=""
                android:textSize="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/otherword"
                android:textColor="#000000"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/volume"
                android:id="@+id/othervoice"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:text=""
                android:textSize="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/othermeaning"
                android:textColor="#000000"
                android:layout_weight="1" />

<!--            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ad_btn_check_on_pressed_holo_light"
                android:id="@+id/imageButton3"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" /> -->
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>